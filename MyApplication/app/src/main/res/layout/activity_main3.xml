<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rodico.duke0808.myapplication.activity.CameraIntro.Main3Activity"
    android:elevation="15dp"
    android:translationZ="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareBt"
        android:src="@drawable/ic_share_black_36dp"
        android:background="#b0d2ff"
        android:onClick="share"
        android:translationZ="15dp"
        android:layout_below="@+id/captureBt"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp"
        android:elevation="1dp"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/captureBt"
        android:src="@drawable/ic_photo_camera_black_36dp"
        android:onClick="capture"
        android:background="#9fd6ff"
        android:elevation="3dp"
        android:translationZ="10dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp" />
</RelativeLayout>
