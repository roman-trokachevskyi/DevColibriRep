<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rodico.duke0808.teststeststests.TestPackege.TestView.TestViewActivity"
    android:id="@+id/root_view">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageViewView"
        android:alpha="0.4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/questionContainer"
        android:layout_above="@+id/backBt"
        android:elevation="1dp"></FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBt"
        android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
        android:background="#aaccfe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:onClick="onBackClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwrdBt"
        android:src="@drawable/ic_keyboard_arrow_right_white_36dp"
        android:layout_alignBottom="@+id/backBt"
        android:layout_alignRight="@+id/questionContainer"
        android:layout_alignEnd="@+id/questionContainer"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#aaccfe"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:onClick="onForvardClick" />
</RelativeLayout>
